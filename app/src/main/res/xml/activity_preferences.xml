<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="@string/prefscreen_activity">



        <com.example.projectnoise.util.ShowListPreference
            app:key="@string/act_current_activity"
            app:entries="@array/activity_entries"
            app:entryValues="@array/activity_values"
            app:title="@string/activity_title"
            app:iconSpaceReserved="false"
            app:defaultValue="sleep"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:inputType="text"
            app:key="@string/act_custom_1"
            app:defaultValue="N/A"
            app:title="Custom Activity 1"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:inputType="text"
            app:key="@string/act_custom_2"
            app:defaultValue="N/A"
            app:title="Custom Activity 2"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:inputType="text"
            app:key="@string/act_custom_3"
            app:defaultValue="N/A"
            app:title="Custom Activity 3"
            app:useSimpleSummaryProvider="true"/>


    <Preference
        android:key="@string/confirm_key"
        android:iconSpaceReserved="false"
        android:widgetLayout="@layout/confirm_button" />
</PreferenceScreen>